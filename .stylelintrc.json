{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include", "mixin"
      ]
    }],
    "color-hex-case": "lower",
    "declaration-block-no-duplicate-properties": [ true, {
      "ignore": [
        "consecutive-duplicates-with-different-values"
      ]
    }],
    "selector-type-no-unknown": [ true, {
      "ignoreTypes": [
        "/^sg-/",
        "/^ng-/"
      ]
    }]
  }
}